<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E0E0E0"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Participant University Name, City, Postal Code"
            android:textColor="@android:color/black"
            android:layout_marginBottom="2dp"
            android:id="@+id/get_fixture_1"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_fixture_1"
            android:layout_centerHorizontal="true"
            android:text="VS"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginBottom="1dp"
            android:id="@+id/get_vs_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Participant University Name, City, Postal Code"
            android:textColor="@android:color/black"
            android:layout_marginBottom="2dp"
            android:id="@+id/get_fixture_2"
            android:layout_below="@id/get_vs_tv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD-Month-YYYY"
            android:textSize="18dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/get_fixture_date"
            android:layout_below="@id/get_fixture_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_fixture_2"
            android:text="HH:MM AM/PM"
            android:id="@+id/get_fixture_time"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:paddingEnd="16dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>