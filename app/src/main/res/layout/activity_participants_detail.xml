<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParticipantsDetail"
    android:orientation="vertical"
    android:layout_margin="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Participant"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:id="@+id/addParticipantsButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Remove Participant"
            android:layout_margin="8dp"
            android:id="@+id/removeParticipantsButton"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editbackgound">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/participantList">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Participant Name"
                    android:inputType="textPersonName"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="4dp">

                    <Spinner
                        android:id="@+id/bloodGroupSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:verticalScrollbarPosition="right"
                        android:dropDownWidth="wrap_content"
                        android:isScrollContainer="true"
                        android:entries="@array/blood"
                        />

                    <Spinner
                        android:id="@+id/sportsName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:verticalScrollbarPosition="right"
                        android:dropDownWidth="wrap_content"
                        android:isScrollContainer="true"
                        android:entries="@array/sportsGame"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>