<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="28dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="#E0E0E0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="University Name, City, Pin Code"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="38dp"
            android:textColor="@android:color/black"
            android:id="@+id/fixture_1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_below="@id/fixture_1"
            android:gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="38dp"
            android:id="@+id/text_view_vs"
            android:textStyle="bold"
            android:fontFamily="cursive"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_vs"
            android:text="University Name, City, Pin Code"
            android:id="@+id/fixture_2"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="DD-Month-YYYY"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/fixture_date"
            android:textSize="20sp"
            android:layout_below="@id/fixture_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HH:MM AM/PM"
            android:textSize="20sp"
            android:layout_toRightOf="@id/fixture_date"
            android:layout_below="@id/fixture_2"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/fixture_time"
            android:textColor="@android:color/holo_red_light"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/fixture_delete"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>