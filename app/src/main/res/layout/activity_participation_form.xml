<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParticipationForm"
    android:background="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter University Name"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:background="@drawable/editbackgound"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter University Full Address"
            android:inputType="textMultiLine"
            android:background="@drawable/editbackgound"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter University City"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter University State"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter University Postal Code"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter University Phone Number"
            android:inputType="phone"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter University E-Mail Address"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter Manager/Coach Name"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter Manager/Coach Phone No."
            android:inputType="phone"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:hint="Enter Manager/Coach E-Mail"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:background="@drawable/editbackgound"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/holo_green_dark"/>


        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:id="@+id/transport_radio_group">

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:text="Yes"
                android:checked="true"
                android:textSize="20dp"
                android:id="@+id/transport_radio_yes"/>

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:text="No"
                android:textSize="20dp"
                android:id="@+id/transport_radio_no"/>

        </RadioGroup>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="28sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"/>


        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:id="@+id/food_radio_group">

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:text="Yes"
                android:id="@+id/food_radio_yes"
                android:textSize="20dp"
                android:checked="true"/>

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:text="No"
                android:id="@+id/food_radio_no"
                android:textSize="20dp"/>

        </RadioGroup>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lodging"
            android:textSize="28sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>


        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:id="@+id/lodging_radio_group">

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:text="Yes"
                android:checked="true"
                android:textSize="20dp"
                android:id="@+id/lodging_radio_yes"/>

            <RadioButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:text="No"
                android:textSize="20dp"
                android:id="@+id/lodging_radio_no"/>

        </RadioGroup>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="28sp"
            android:text="NEXT"
            android:layout_marginTop="16dp"
            android:onClick="iCall"
            android:layout_marginBottom="4dp"
            android:background="@drawable/submit_button_style"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>
    </LinearLayout>

</ScrollView>