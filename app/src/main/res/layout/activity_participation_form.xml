<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParticipationForm"
    android:background="#E0E0E0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Name"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter University Name"
                    android:importantForAutofill="no"
                    android:textSize="20sp"
                    android:inputType="textPersonName"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_university_name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Address"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter University Address"
                    android:inputType="textPostalAddress"
                    android:importantForAutofill="no"
                    android:background="@drawable/editbackgound"
                    android:textSize="20sp"
                    android:id="@+id/participant_university_address"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University City"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter University City"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_university_city"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University State"
                    android:textColor="@android:color/holo_green_dark"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:entries="@array/state_list"
                    android:background="@drawable/spinner_background"
                    android:id="@+id/participant_university_state"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Postal Code"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter University Postal Code"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_university_post_code"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Phone Number"
                    android:textColor="@android:color/holo_green_dark"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter University Phone Number"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:textSize="20sp"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_university_phone_number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University EMail Address"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter University E-Mail Address"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:importantForAutofill="no"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_university_email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Coach Name"
                    android:textColor="@android:color/holo_green_dark"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter Manager/Coach Name"
                    android:inputType="textPersonName"
                    android:importantForAutofill="no"
                    android:textSize="20sp"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_coach_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Coach Phone Number"
                    android:textColor="@android:color/holo_green_dark"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter Manager/Coach Phone No."
                    android:inputType="phone"
                    android:importantForAutofill="no"
                    android:textSize="20sp"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_coach_phone_no"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:text="University Coach EMail"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:hint="Enter Manager/Coach E-Mail"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:importantForAutofill="no"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/participant_coach_email"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@android:color/holo_green_dark" />


                <RadioGroup android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical"
                    android:id="@+id/transport_radio_group">

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Yes"
                        android:checked="true"
                        android:textSize="20dp"
                        android:id="@+id/transport_radio_yes"/>

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="8dp"
                        android:text="No"
                        android:textSize="20dp"
                        android:id="@+id/transport_radio_no"/>

                </RadioGroup>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="28sp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"/>


                <RadioGroup android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical"
                    android:id="@+id/food_radio_group">

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Yes"
                        android:id="@+id/food_radio_yes"
                        android:textSize="20dp"
                        android:checked="true"/>

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="8dp"
                        android:text="No"
                        android:id="@+id/food_radio_no"
                        android:textSize="20dp"/>

                </RadioGroup>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lodging"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"/>


                <RadioGroup android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical"
                    android:id="@+id/lodging_radio_group">

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Yes"
                        android:checked="true"
                        android:textSize="20dp"
                        android:id="@+id/lodging_radio_yes"/>

                    <RadioButton android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="8dp"
                        android:text="No"
                        android:textSize="20dp"
                        android:id="@+id/lodging_radio_no"/>

                </RadioGroup>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="28sp"
            android:text="RESET"
            android:id="@+id/reset_button"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/submit_button_style"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="28sp"
            android:text="NEXT"
            android:layout_marginTop="16dp"
            android:id="@+id/participant_next_button"
            android:layout_marginBottom="16dp"
            android:background="@drawable/submit_button_style"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>

    </LinearLayout>

</LinearLayout>