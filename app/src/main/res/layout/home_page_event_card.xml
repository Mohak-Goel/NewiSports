<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E0E0E0"
    app:cardCornerRadius="20dp"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/home_page_event_poster" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_page_event_poster"
            android:text="Event Title, City"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="4dp"
            android:id="@+id/home_page_event_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_page_event_title"
            android:text="dd-mmm-yyyy"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18dp"
            android:paddingBottom="4dp"
            android:paddingLeft="28dp"
            android:id="@+id/home_page_event_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_page_event_title"
            android:layout_alignParentRight="true"
            android:text="hh:mm am/pm"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18dp"
            android:paddingRight="28dp"
            android:id="@+id/home_page_event_time"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participate now"
            android:id="@+id/home_page_participate_button"
            android:background="@android:color/holo_green_light"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/home_page_event_time"
            android:paddingBottom="4dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>