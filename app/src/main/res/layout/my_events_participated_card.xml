<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E0E0E0"
    app:cardCornerRadius="12dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/event_participated_poster" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_participated_poster"
            android:text="Event Title"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="4dp"
            android:id="@+id/event_participated_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_participated_title"
            android:text="dd-mmm-yyyy"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16dp"
            android:paddingLeft="12dp"
            android:paddingBottom="2dp"
            android:id="@+id/event_participated_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_participated_title"
            android:layout_alignParentRight="true"
            android:text="hh:mm am/pm"
            android:paddingRight="12dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16dp"
            android:id="@+id/event_participated_time"/>

        <Button
            android:id="@+id/event_participated_view_detail"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/event_participated_time"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_shape"
            android:text="View Details" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>