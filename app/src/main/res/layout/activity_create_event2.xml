<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateEvent2"
    android:layout_margin="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="4dp"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provideFood">
                    <RadioButton
                        android:id="@+id/food_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Yes"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/food_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:layout_marginLeft="10dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lodging"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="28sp"
                    android:layout_marginTop="4dp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provideLodging">
                    <RadioButton
                        android:id="@+id/lodging_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Yes"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/lodging_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:layout_marginLeft="10dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="28sp" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provideTransport">
                    <RadioButton
                        android:id="@+id/transport_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Yes"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/transport_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="No" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe Your Event"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/eventdescrip"
                    android:background="@drawable/editbackgound"
                    android:hint="Enter Event Description"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Contact"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/holo_green_dark"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbackgound"
                    android:id="@+id/ourContact"
                    android:layout_margin="10dp"
                    android:inputType="phone"
                    android:hint="Enter your institute's contact number"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Event Poster"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="27sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnChoose"
                    android:paddingLeft="4dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/button_shape"
                    android:text="Browse"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/url_text"
                    android:layout_margin="4dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnUpload"
                    android:paddingLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="Upload"
                    android:background="@drawable/button_shape"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>



        <Button
            android:id="@+id/create_Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/submit_button_style"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="24sp"
            android:text="Create Event" />

</LinearLayout>
